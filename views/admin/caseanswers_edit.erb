<style>
	input[type=text] { border: 1px solid #396292; padding: 7px; }
	
</style>

<div class="row">
	<div class="span12">
		<h1>Answers</h1>		
		<hr />
		<form class="form-horizontal" method="post">
			<fieldset>
				<div class="control-group" style="float: right;">
					<select type="text" class="form-select" name="correct" id="correct" style="width: 14em;" >
						<option value="false" <%= 'selected' if @caseanswers.correct == 'false' %>>Incorrect</option>
						<option value="true" <%= 'selected' if @caseanswers.correct == 'true' %>>Correct</option>
					</select>
				</div>
				<div class="control-group">
					<label class="control-label" for="position">Position</label>
					<div class="controls">
						<input type="text" name="position" id="position" class="span2" value="<%= @caseanswers.position %>" />
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="body">Answer</label>
					<div class="controls">
						<input type="text" name="body" id="body" class="span7" value="<%= @caseanswers.body %>" />
					</div>
				</div>
				
				<div class="control pull-right">
					<input class="btn btn-small btn-success" type="submit" value="Save" />&nbsp;&nbsp;&nbsp;<a class="btn btn-small" onclick="goBack()">Cancel</a>&nbsp;&nbsp;&nbsp;<a class="btn btn-small btn-danger" href="/admin/casestudies/<%= @casestudies.id %>/casequestions/<%= @casequestions.id %>/caseanswers/<%= @caseanswers.id %>/delete">Delete</a>
				</div><br />
				<hr style="border-color: #4e86c6" />
			</fieldset>
		</form>
	</div>
</div>

<script>
	function goBack() {
	window.history.back();
}
</script>

